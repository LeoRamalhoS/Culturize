@model List<Company>

<div class="container">
    <div class="row mt-4">
        <div class="col-6">
            <h1 class="text-primary">Company List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create
            </a>
        </div>
    </div>
</div>
<div class="row mt-4">
    <div class="col mx-auto">
        <table id="tblData" class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>City</th>
                    <th>Country</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts { 
    <script src="~/js/company.js"></script>
}