@model List<Company>

@if (Model.Count > 0)
{
    <div class="container">
        <div class="row mt-4">
            <div class="col-6">
                <h1 class="text-primary">Company List</h1>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create
                </a>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col mx-auto">
            <table id="tblData" class="table table-bordered table-striped w-100">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>City</th>
                        <th>Country</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="card col-4 d-flex align-items-center mx-auto border-3 text-danger shadow-sm mt-5">
            <div class="card-image">
                <i class="icon-xl bi bi-building-fill-exclamation"></i>
            </div>
            <div class="card-body text-center pt-0 px-0 mt-3">
                <h5>No Companies !</h5>
                <div class="mt-4">
                    <a asp-action="Upsert" class="btn btn-sm btn-primary">Create Company</a>
                    <button onclick="CreateDemoCompany()" class="btn btn-sm btn-secondary">Create Demo Company</button>
                </div>
            </div>
        </div>

    </div>
}

@section Scripts {
    <script src="~/js/company.js"></script>
}